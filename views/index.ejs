<!DOCTYPE html>
<html lang="en">

<head>
    <title>Kool Karz</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/cars.css">
</head>

<body>
  <%- include('partials/_header') %>
    <div class="container mt-5">
        
        <!-- Price Filter -->
        <div class="my-3">
            <label for="priceFilter">Filter by Price: </label>
            <input type="range" id="priceFilter" min="0" max="100000" step="500" value="100000" />
            <span id="priceLabel">$100,000</span>
        </div>

        <!-- Cars Listing -->
        <div id="carsList">
            <!-- Example Car 1 -->
            <div class="card mb-3" data-price="25000">
              <div class="car-box">
                <img src="path_to_car_image.jpg" alt="Car Model" class="car-image">
                <h2 class="car-model">Car Model - Mazda</h2>
                <p class="car-year">Year - 2023</p>
                <p class="car-price">Price - $50,000</p>
                <p class="car-milage">Milage - 10,000</p>
            </div>
            </div>
            <!-- Example Car 2 -->
            <div class="card mb-3" data-price="15000">
              <div class="car-box">
                <img src="path_to_car_image.jpg" alt="Car Model" class="car-image">
                <h2 class="car-model">Car Model - Kia</h2>
                <p class="car-year">Year - 2023</p>
                <p class="car-price">Price - $50,000</p>
                <p class="car-milage">Milage - 10,000</p>
                
            </div>
            </div>
            <!-- ... Add more cars similarly ... -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Filter cars based on price
        $(document).ready(function () {
            $('#priceFilter').on('input', function () {
                let maxPrice = $(this).val();
                $('#priceLabel').text('$' + maxPrice);

                $('.card').each(function () {
                    if ($(this).data('price') > maxPrice) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
</body>

</html>